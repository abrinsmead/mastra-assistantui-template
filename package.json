{
  "name": "mastra-assistant-ui-template",
  "version": "1.0.0",
  "description": "Full-stack AI assistant template with Mastra backend and Assistant-UI frontend",
  "private": true,
  "workspaces": [
    ".",
    "src/frontend"
  ],
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "concurrently --kill-others --names \"MASTRA,FRONTEND\" --prefix-colors \"yellow,cyan\" \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "mastra dev",
    "dev:frontend": "npm run dev --workspace=src/frontend",
    "build": "mastra build && npm run build:frontend",
    "build:backend": "mastra build",
    "build:frontend": "npm run build --workspace=src/frontend",
    "start": "mastra start",
    "start:frontend": "npm run start --workspace=src/frontend"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "engines": {
    "node": ">=20.9.0"
  },
  "dependencies": {
    "@ai-sdk/openai": "^1.3.23",
    "@mastra/core": "^0.11.1",
    "@mastra/libsql": "^0.11.2",
    "@mastra/loggers": "^0.10.4",
    "@mastra/memory": "^0.11.5",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^24.1.0",
    "concurrently": "^9.2.0",
    "mastra": "^0.10.15",
    "typescript": "^5.8.3"
  }
}
